@model Insurance.Models.ViewModels.AactionVM

@{
    var title = "Create Action";
}
@if (Model.Aaction.Id != 0)
{
    title = "Edit Action";
}

<div class="modal fade" id="addAaction">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addMenuLable">  @title </h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="Upsert" id="addAaction">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Aaction.Id" />

                    <div class="form-group">
                        <label asp-for="Aaction.Menu_Ids"></label>
                        @Html.DropDownListFor(m => m.Aaction.Menu_Ids, Model.MenuList, "-Select a Parrent",
                        new { @class = "form-control" })
                        <span asp-validation-for="Aaction.Menu_Ids" class="text-danger"></span>
                    </div>

                    <div class="form-group">

                        <label asp-for="Aaction.ActionName"></label>

                        <input asp-for="Aaction.ActionName" class="form-control" />
                        <span asp-validation-for="Aaction.ActionName" class="text-danger"></span>

                    </div>


                    <div class="form-group">

                        <label asp-for="Aaction.IsActive"></label>
                        <input type="checkbox" asp-for="Aaction.IsActive" class="form-control" />
                        <span asp-validation-for="Aaction.IsActive" class="text-danger"></span>

                    </div>


                </form>
            </div>

            <div class="modal-footer">

                <button type="submit" class="btn btn-success form-control" data-save="modal">Save</button>
                <button type="submit" class="btn btn-primary form-control" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>



</div>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}